
<% include ../partials/header %>
<div class="container ">
  <header class="jumbotron opaqueBack">
    <div class="container">
      <h1 class="display-4">Start blogging with Bloggeroo!</h1>
      <p class="lead">It's easy to start your blogging adventure with Bloggeroo. Just sign up with a username and password and you are redy to go!</p>
      <a class="btn btn-primary btn-lg" href="/posts/new">Add New Post</a>

    </div>
  </header>



<!--

  <div class="row" >
    <div class="col-lg-12">
      <h3 class="lead">Check out the most recent posts</h3>
    </div>
  </div> -->

  <div class="row" >
    <% posts.forEach(function(post){ %>

  <div class="containter mb-2 col-xm-12 col-sm-12 col-md-6 col-lg-4 mt-5">
    <div class="card card-collection" >
      <% if(post.image != ""){%>
        <img class="card-img-top" src="<%= post.image %>" alt="Card image cap">
        <div class="card-body">
          <h3 class="card-title"><%= post.name %></h3>
          <% if(post.content.length > 100){ %>
            <p class="card-text "><%- (post.content.substring(0, 100)).concat("...") %></p>
          <% }else{ %>
            <p class="card-text"><%- post.content.substring(0, 100) %></p>
          <% } %>
          <a href="/posts/<%= post._id %>" class="btn btn-primary">Read more</a>
        </div>
      <%}else{%>
        <div class="card-body">
          <h3 class="card-title"><%= post.name %></h3>
          <% if(post.content.length > 200){ %>
            <p class="card-text "><%- (post.content.substring(0, 400)).concat("...") %></p>
          <% }else{ %>
            <p class="card-text"><%- post.content.substring(0, 400) %></p>
          <% } %>
          <a href="/posts/<%= post._id %>" class="btn btn-primary">Read more</a>
        </div>
      <%}%>

    </div>
  </div>


  <% }); %>
</div>

</div>




<% include ../partials/footer %>
