
<% include ../partials/header %>
<div class="container myBackground">
  <header class="jumbotron">
    <div class="container">
      <h1 class="display-4">Welcome to Bloggeroo!</h1>
      <p class="lead">Start and adventure, start blogging!</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/posts/new">Add New Post</a>
      </p>
    </div>
  </header>





  <div class="row" >
    <div class="col-lg-12">
      <h3 class="lead">Check out the most recent posts</h3>
    </div>
  </div>

  <div class="row" >
    <% posts.forEach(function(post){ %>

  <div class="containter mb-2 col-md-4 col-sm-6">
    <div class="card" >
      <% if(post.image != ""){%>
        <img class="card-img-top" src="<%= post.image %>" alt="Card image cap">
        <div class="card-body">
          <h3 class="card-title"><%= post.name %></h3>
          <% if(post.content.length > 100){ %>
            <p class="card-text "><%- (post.content.substring(0, 100)).concat("...") %></p>
          <% }else{ %>
            <p class="card-text"><%- post.content.substring(0, 100) %></p>
          <% } %>
          <a href="/posts/<%= post._id %>" class="btn btn-primary">Read more</a>
        </div>
      <%}else{%>
        <div class="card-body">
          <h3 class="card-title"><%= post.name %></h3>
          <% if(post.content.length > 200){ %>
            <p class="card-text "><%- (post.content.substring(0, 400)).concat("...") %></p>
          <% }else{ %>
            <p class="card-text"><%- post.content.substring(0, 400) %></p>
          <% } %>
          <a href="/posts/<%= post._id %>" class="btn btn-primary">Read more</a>
        </div>
      <%}%>

    </div>
  </div>


  <% }); %>
</div>

</div>




<% include ../partials/footer %>
