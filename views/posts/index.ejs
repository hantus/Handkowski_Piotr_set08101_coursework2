
<% include ../partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to Bloggeroo</h1>
      <p>Start and adventure, start blogging!</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/posts/new">Add New Post</a>
      </p>
    </div>

  </header>

  <div class="row" >
    <div class="col-lg-12">
      <h3>Our Most Recent Posts</h3>
    </div>
  </div>

  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% posts.forEach(function(post){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= post.image %>" alt="">
          <div class="caption">
            <h4><%= post.name %></h4>
          </div>
          <p>
            <a class="btn btn-primary" href="/posts/<%= post._id %>">More Info</a>
          </p>
        </div>


      </div>


    <% }); %>
  </div>

</div>




<% include ../partials/footer %>
