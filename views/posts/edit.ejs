<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Edit <%= post.name %></h1>
    <div style="width: 50%; margin: 25px auto;">
      <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="post[name]" value="<%= post.name %>">
        </div>
        <div class="form-group">
          <input class="form-control"  type="text" name="post[image]" value="<%= post.image %>">
        </div>
        <div class="form-group">
          <!-- <input class="form-control"  type="text" name="post[content]" value="<%= post.content %>"> -->
          <textarea type="text" name="post[content]" class="form-control"><%= post.content %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/posts">Go Back</a>
    </div>



  </div>

</div>


<script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
<script>
CKEDITOR.replace( 'post[content]' );
</script>

<% include ../partials/footer %>
