<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Edit Comment</h1>
    <div style="width: 50%; margin: 25px auto;">
      <form action="/posts/<%= post_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <!-- <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>"> -->
          <textarea type="text" name="comment[text]" class="form-control"><%= comment.text%></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Save</button>
        </div>
      </form>
      <a href="/posts">Go Back</a>
    </div>



  </div>

</div>



<script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
<script>
CKEDITOR.replace( 'comment[text]' );
</script>
